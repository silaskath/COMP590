<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.simac.assignment2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="70pt"
            android:layout_height="30pt"
            android:id="@+id/accel_but"
            android:onClick="accel"
            android:text="Accelerometer"
            android:textSize="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accel_stat"
                android:padding="2pt"
                android:text="Status:"
                android:textSize="10sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accel_info"
                android:padding="2pt"
                android:text="Info:"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="70pt"
            android:layout_height="30pt"
            android:id="@+id/prox_but"
            android:onClick="prox"
            android:text="Proximity"
            android:textSize="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prox_stat"
                android:padding="2pt"
                android:text="Status:"
                android:textSize="10sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prox_info"
                android:padding="2pt"
                android:text="Info:"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="70pt"
            android:layout_height="30pt"
            android:id="@+id/mag_but"
            android:onClick="mag"
            android:text="Magnetic Field"
            android:textSize="10sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mag_stat"
                android:padding="2pt"
                android:text="Status:"
                android:textSize="10sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mag_info"
                android:padding="2pt"
                android:text="Info:"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
